{% extends 'base.html.twig' %}

{% block title %}{{ 'login.title'|trans }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-header text-center">
                <h4 class="mb-0">
                    <i class="fas fa-lock"></i> {{ 'login.title'|trans }}
                </h4>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info">
                        <i class="fas fa-user"></i> {{ 'login.already_logged'|trans }} {{ app.user.userIdentifier }}
                        <br>
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-primary mt-2">
                            <i class="fas fa-sign-out-alt"></i> {{ 'nav.logout'|trans }}
                        </a>
                    </div>
                {% else %}
                    <form method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">
                                <i class="fas fa-envelope"></i> {{ 'login.email'|trans }}
                            </label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" 
                                   class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">
                                <i class="fas fa-key"></i> {{ 'login.password'|trans }}
                            </label>
                            <input type="password" name="_password" id="password" 
                                   class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-sign-in-alt"></i> {{ 'login.sign_in'|trans }}
                            </button>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <small class="text-muted">
                            {{ 'login.demo_accounts'|trans }}<br>
                            <strong>Admin:</strong> admin@blog.com / admin123<br>
                            <strong>Editor:</strong> editor@blog.com / editor123
                        </small>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
